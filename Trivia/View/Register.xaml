<Page x:Class="Trivia.View.Register"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Trivia.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Register">

    <Grid>
        <Border Background="Honeydew" Height="400" Width="300" BorderThickness="3" CornerRadius="30">

            <StackPanel >
                <TextBox x:Name="Name" Margin="5,30,5,5" TextWrapping="Wrap" Text="UserName" VerticalAlignment="Top" Width="120" GotFocus="NameOnfoucus" />
                <TextBox x:Name="Password" Margin="5" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus"/>
                <TextBox x:Name="Email" Margin="5" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="120" GotFocus="TextBox_GotFocus_1"/>
                <Button Content="Register" FontSize="18" Margin="0,75,0,0" Width="120" Click="Button_Click" />
                <Image Source="/Assets/Eatingmonkey.png" Height="200" Width="241"  />

            </StackPanel>


        </Border>


    </Grid>
</Page>
